// Prisma Database Schema for Nexus ERP
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USERS & AUTH ====================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(CASHIER)
  avatar    String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales Sale[]

  @@map("users")
}

enum UserRole {
  ADMIN
  MANAGER
  CASHIER
}

// ==================== PRODUCTS ====================
model Product {
  id          String          @id @default(cuid())
  sku         String          @unique
  name        String
  description String?
  category    ProductCategory
  costPrice   Decimal         @db.Decimal(10, 2)
  salePrice   Decimal         @db.Decimal(10, 2)
  stock       Int             @default(0)
  minStock    Int             @default(5)
  status      ProductStatus   @default(ACTIVE)
  image       String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  saleItems SaleItem[]

  @@map("products")
}

enum ProductCategory {
  HERRAMIENTAS
  PINTURAS
  PLOMERIA
  ELECTRICIDAD
  FERRETERIA_GENERAL
  CONSTRUCCION
  JARDINERIA
  SEGURIDAD
}

enum ProductStatus {
  ACTIVE
  INACTIVE
}

// ==================== SALES ====================
model Sale {
  id            String        @id @default(cuid())
  subtotal      Decimal       @db.Decimal(10, 2)
  tax           Decimal       @db.Decimal(10, 2)
  total         Decimal       @db.Decimal(10, 2)
  paymentMethod PaymentMethod
  status        SaleStatus    @default(COMPLETED)
  userId        String?
  customerId    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user     User?      @relation(fields: [userId], references: [id])
  customer Customer?  @relation(fields: [customerId], references: [id])
  items    SaleItem[]

  @@map("sales")
}

model SaleItem {
  id          String  @id @default(cuid())
  saleId      String
  productId   String
  productName String
  productSku  String
  quantity    Int
  unitPrice   Decimal @db.Decimal(10, 2)
  total       Decimal @db.Decimal(10, 2)

  sale    Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("sale_items")
}

enum PaymentMethod {
  CASH
  CARD
  QR
}

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED
}

// ==================== CUSTOMERS ====================
model Customer {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String?
  rnc       String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales Sale[]

  @@map("customers")
}

// ==================== TRANSACTIONS (FINANCE) ====================
model Transaction {
  id          String          @id @default(cuid())
  type        TransactionType
  description String
  amount      Decimal         @db.Decimal(10, 2)
  method      PaymentMethod?
  reference   String?
  createdAt   DateTime        @default(now())

  @@map("transactions")
}

enum TransactionType {
  SALE
  EXPENSE
  REFUND
}

// ==================== COMPANY SETTINGS ====================
model CompanySettings {
  id       String  @id @default("default")
  name     String  @default("Ferreter√≠a Express")
  rnc      String?
  address  String?
  phone    String?
  email    String?
  logo     String?
  taxRate  Decimal @default(0.18) @db.Decimal(5, 4)
  currency String  @default("DOP")

  @@map("company_settings")
}
